    <style name="CheckBox.Selector" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gender_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>
    <style name="CheckBox.Check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:textColor">@color/terms_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>



    <style name="EditText.Input" parent="android:Widget.EditText">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textColorHint">@color/font_light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Spinner.Item" parent="android:Widget.Spinner">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textColorHint">@color/font_light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:background">@drawable/custom_spinner_bg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


