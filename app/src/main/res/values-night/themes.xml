<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoKind" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color2</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_nav_bg</item>
    </style>

    <style name="back_bt_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.Fill.Black" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/font_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button.Fill.Main.Selector" parent="android:Widget.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_btn_selector</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bt_text_selector</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button.Fill.Main" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/main_color</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
