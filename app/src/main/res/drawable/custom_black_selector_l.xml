<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp" />
            <stroke android:width="1dp" android:color="@color/light_gray2" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/font_black" />
            <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp" />
            <stroke android:width="1dp" android:color="@color/font_black" />
        </shape>
    </item>
</selector>
